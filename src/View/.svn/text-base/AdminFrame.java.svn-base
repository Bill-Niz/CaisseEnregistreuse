    private void buttonEnregistrerActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_buttonEnregistrerActionPerformed
        int returnVal = this.fileChooser.showOpenDialog(this);
        
        if (returnVal == JFileChooser.APPROVE_OPTION) {
            String path = this.fileChooser.getSelectedFile().getPath()+"/";
            
            int row = this.tableFacture.getSelectedRow();
            String ref = (String)this.tableFacture.getModel().getValueAt(row, 0);
            Facture fact = this.factureRep.getFactureByReference(ref);
            fact.generatePdf(path);
            
            
            System.out.println(path);
        } else {
           
        }
    }//GEN-LAST:event_buttonEnregistrerActionPerformed

    private void tableFactureMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_tableFactureMouseClicked
        
        
        int row = this.tableFacture.getSelectedRow();
        String ref = (String)this.tableFacture.getModel().getValueAt(row, 0);
        Facture fact = this.factureRep.getFactureByReference(ref);
        System.out.println(ref);
        this.tableContenu.clearSelection();
        this.tableContenu.setModel(fact.getListProduit());
        this.tableContenu.repaint();
        
        this.labelSousTotal.setText(fact.getListProduit().getPrixTotal()+ " €");
        float prix = fact.getListProduit().getPrixTotal();
        prix = prix - ((prix*fact.getRemise())/100);
        this.labelTotal.setText(prix + " €");
        this.labelRemise.setText("-" +fact.getRemise()+ " %");
        
    }//GEN-LAST:event_tableFactureMouseClicked
